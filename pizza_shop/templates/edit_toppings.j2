<head>
	<title>Edit Topping</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <caption><strong>Editing Topping: </strong></caption>
        <table border="1" cellpadding="5"> 
            
            <!-- Access data tuple passed from pizza_shop.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column names -->
                        <!-- {% for key in data[0].keys() %} -->
                            <!-- Create the header row -->
                        <!--    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th> -->
                        <!-- {% endfor %} -->
                        <th>ID</th><th>Name</th><th>Phone Number</th><th>Car Model</th> 
                    </tr>

                <tbody>
                    <!-- iterate through every item in data -->
                    {% for item in data %}
                        <tr>
                            <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}
                                <!-- Create a <td> element with the value of that key in it -->
                                <td>{% if item[key] %} {{item[key]}} {% endif %}</td> 
                            {% endfor %} 
                        </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

        <div id="edit">
            <!-- form to UPDATE data in Toppings-->
            <form id="editTopping" action="/edit_topping/{{data[0].toppingID}}" method="post">
                <legend><strong>Edit Topping</strong></legend>
                <fieldset>
                    <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" pattern="[A-Za-z]{1,}" value="{{data[0].name}}" placeholder="Pepperoni" required>

                    <label for="price">Price:</label>
                    <input type="number" step="0.01" min="0" class="form-control" id="price" name="price" value="{{data[0].price}}" placeholder="1.25" required>

                    <label for="qty">Quantity:</label>
                    <input type="number" min="0" class="form-control" id="qty" name="qty" value="{{data[0].quantity}}" placeholder="15" required> 
                </fieldset>	

                <input type="submit" value="Edit Topping" name="Edit_Topping" class="btn btn-primary" style="margin:.5rem;">
                <a href='/toppings'><input class="btn" type="button" value="cancel"></a>
            </form>

</html>
