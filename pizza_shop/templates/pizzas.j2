<head>
	<title>Pizzas</title>
	<link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
	<!-- Navigation header -->
	<h1>Pizzas</h1> [ <a href="customers">Customers</a> | <a href="drivers">Drivers</a> | <a href="orders">Orders</a> | <a href="pizzas">Pizzas</a> | <a href="toppings">Toppings</a> ]
	<!-- browse -->
	<div id="browse">
		<table border="1" cellpadding="5">
            <!-- Access data tuple passed from pizza_shop.py --> 
            {% if data %}
			    <thead>
				    <tr>
					    <!-- Iterate through each key in the first entry to get the column names -->
                        <!-- {% for key in data[0].keys() %} -->
                            <!-- Create the header row -->
                        <!--    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th> -->
                        <!-- {% endfor %} -->
                        <th>ID</th><th>Name</th><th>Price</th><th>Description</th><th>Toppings</th>
                    </tr>

				<tbody>
					<!-- Iterate through every item in data -->
					{% for item in data %}
					    <tr>
						    <!-- Then iterate through every key in the current item dictionary -->
                            {% for key in item.keys() %}
								<!-- Create a <td> element with the value of that key in it -->
								<td> {% if item[key] %} {{item[key]}} {% endif %} </td> 
                            {% endfor %}

                            <!-- Create our edit/delete buttons -->
						    <td><a href="edit_pizza/{{item.pizzaID}}"><input class="btn" type="button" value="Edit"></a></td>
						    <td><a href="delete_pizza/{{item.pizzaID}}"><input class="btn" type="button" value="Delete"></a></td>
					    </tr> 
                    {% endfor %} 
                {% endif %} 
        </table>   
		<p><a href='/add_pizza'><input class="btn" type="button" value="Add New Pizza"></a></p>
	</div>

</body>
</html>
